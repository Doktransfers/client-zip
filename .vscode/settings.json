{
    "vitest.enable": true,
    "vitest.commandLine": "npm run test",
    "vitest.include": [
        "test/**/*.test.ts"
    ],
    "vitest.exclude": [
        "**/node_modules/**",
        "**/dist/**"
    ],
    "testing.automaticallyOpenPeekView": "never",
    "testing.followRunningTest": true,
    "testing.gutterEnabled": true,
    "testing.openTesting": "openExplorer",
    "testing.automaticallyOpenTestResults": "openExplorer"
}
